!!!5
%html
  %head
    %meta{ charset: "utf-8" }
    %title App
    %link{ href: "/css/vendor/bulma.css", type: "text/css", rel: "stylesheet" }
    %link{ href: "/css/style.css", type: "text/css", rel: "stylesheet" }

  %body{ class: body_class }
    .container

      %nav.navbar{"aria-label" => "main navigation", role: "navigation"}
        .navbar-brand
          %a.navbar-item{:href => "https://bulma.io"}
            %h1
              %a.subtitle.is-size-4{ href: "/" } App
          %a.navbar-burger.burger{"aria-expanded" => "false", "aria-label" => "menu", "data-target" => "navbarBasicExample", :role => "button"}
            %span{"aria-hidden" => "true"} Home
            %span{"aria-hidden" => "true"} Page 1
        #navbarBasicExample.navbar-menu
          .navbar-start
            %a.navbar-item{ href: "/" } Home
            %a.navbar-item{ href: "/foo" } Page 1
          -# .navbar-end
          -#   .navbar-item
          -#     .buttons
          -#       %a.button.is-primary
          -#         %strong Sign up
          -#       %a.button.is-light
          -#         Log in

      %section.hero.is-primary.is-medium
        .hero-body
          .container.hs20
            %h1
              %a.title{ href: "/" } Hello world
            %h2.subtitle
              This is an awesome app!

      %section.content
        .box
          = yield

    %script{ src: "/js/vendor/handlebars.js", type: "text/javascript" }
    %script{ src: "/js/vendor/underscore.js", type: "text/javascript" }
    %script{ src: "/js/app.js", type: "text/javascript" }
